<Application x:Class="PolivanovISIP15_P9.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PolivanovISIP15_P9"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBox" x:Key="TBStyle">
            <Setter Property="Height" Value="27"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="FontFamily" Value="/PolivanovISIP15_P9;component/#Akrobat"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5 7 5 5"/>
            <Setter Property="SelectionBrush" Value="{x:Null}"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="#FF17479E"/>
        </Style>
        <Style TargetType="Button" x:Key="BTNStyle">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="FontFamily" Value="/PolivanovISIP15_P9;component/#Akrobat"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#FF17479E"/>
        </Style>
    </Application.Resources>
</Application>
